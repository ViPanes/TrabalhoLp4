
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Share/_layout.cshtml";
}

@section js{
    <script src="~/Views/Login/IndexLogin.js"></script>
}

<!-- bradcam_area_start -->
<div class="bradcam_area breadcam_bg_2">
    <h3>LOGIN</h3>
</div>
<!-- bradcam_area_end -->
<!-- ================ contact section start ================= -->
<section class="contact-section">
    <div class="container">

        <div class="row">
            <div class="col-12">
                <h2 class="contact-title">LOGIN</h2>
            </div>
            <div class="col-lg-8">
                <form class="form-contact contact_form" action="contact_process.php" method="post" id="contactForm" novalidate="novalidate">
                    <div class="row">
                        <div class="col-12">
                            <a>E-mail</a>
                            <div class="form-group">
                                <input class="form-control" name="email" id="email" type="text" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Coloque o Email'" placeholder="E - mail">
                            </div>
                        </div>
                        <div class="col-12">
                            <a>Senha</a>
                            <div class="form-group">
                                <input class="form-control" name="senha" id="senha" type="password" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Coloque a Senha'" placeholder="Senha">
                            </div>
                        </div>
                    </div>

                    <div id="divMsg"></div>

                    <div class="form-group mt-3">
                        <input type="button" value="Enviar" id="btnLogar" onclick="IndexLogin.btnLogarOnClick()" class="button button-contactForm boxed-btn" />
                    </div>

                </form>
            </div>
            <div class="col-lg-3 offset-lg-1">
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-home"></i></span>
                    <div class="media-body">
                        <h3>Buttonwood, California.</h3>
                        <p>Rosemead, CA 91770</p>
                    </div>
                </div>
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-tablet"></i></span>
                    <div class="media-body">
                        <h3>+1 253 565 2365</h3>
                        <p>Mon to Fri 9am to 6pm</p>
                    </div>
                </div>
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-email"></i></span>
                    <div class="media-body">
                        <h3>support@colorlib.com</h3>
                        <p>Send us your query anytime!</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ================ contact section end ================= -->