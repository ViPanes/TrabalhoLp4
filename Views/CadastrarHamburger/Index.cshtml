
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Share/_layout.cshtml";
}

@section js{
    <script src="~/Views/CadastrarHamburger/IndexCadastrarHamb.js"></script>
}

<div class="bradcam_area breadcam_bg_2">
    <h3>Cadastrar Hamburger</h3>
</div>

<section class="contact-section">
    <div class="container">


        <div class="row">
            <div class="col-12">
                <h2 class="contact-title">Get in Touch</h2>
            </div>
            <div class="col-lg-8">
                <form class="form-contact contact_form" action="contact_process.php" method="post" id="contactForm" novalidate="novalidate">
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                <a>Nome do Hamburger:</a>
                                <input class="form-control" name="nomeProd" id="nomeProd" type="text" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Nome do Produto'" placeholder="Nome do Produto">
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <a>Descrição do Hamburger:</a>
                                <textarea class="form-control w-100" name="descricao" id="descricao" cols="30" rows="9" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Descreva o Produto  (Max 250 caracteres)'" placeholder=" Drescreva o Produto"></textarea>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <a>Preço</a>
                                <input class="form-control valid" name="preco" id="preco" type="text" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Preço'" placeholder="Preço">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <a>Categoria:</a>
                                <select id="selectCategoria">
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <a>Foto:</a>
                                <input type="file"  class="form-control"  name="foto" id="foto" />
                                </select>
                            </div>
                        </div>

                        <div id="divMsg"></div>

                        <div class="form-group mt-3">
                            <input type="button" value="Cadastrar" id="btnCadastrar" onclick="IndexCadastrarHamb.btnCadastrarOnClick()" class="button boxed-btn" />
                        </div>
</form>
            </div>

        </div>
    </div>
</section>
